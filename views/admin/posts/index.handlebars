<h2 class="font-weight-bold"><strong>ALL POSTS</strong></h2>

<table class="table">

    <thead class="grey lighten-2">
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Title</th>
            <th scope="col">Status</th>
            <th scope="col">Allow Comments</th>
            <th></th>
            <th></th>
            <th><span class="float-right"><a href="/admin/posts/create" class="text-success"><i class="fa fa-plus" aria-hidden="true"></i> New</a></span></th>
        </tr>
    </thead>

    <tbody>
       {{#each posts}}
        <tr>
            <th scope="row">{{id}}</th>
            <td>{{title}}</td>
            <td>{{status}}</td>
            <td>{{allowComments}}</td>
            <td><a href="/admin/posts/view/{{id}}" class="btn btn-outline-success waves-effect btn-sm m-0 pull-right"><i class="fa fa-eye" aria-hidden="true"></i> View</a></td>
            <td><a href="/admin/posts/edit/{{id}}" class="btn btn-outline-info waves-effect btn-sm m-0 pull-right"><i class="fa fa-edit" aria-hidden="true"></i> Edit</a></td>
            <td>
                <form action="/admin/posts/{{id}}?_method=DELETE" method="post">
                    <button type="submit" class="btn btn-outline-danger waves-effect btn-sm m-0"><i class="fa fa-trash" aria-hidden="true"></i> Delete</button>
                </form>
            </td>
        </tr>
        {{/each}}
    </tbody>

</table>