  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/admin/dashboard">Dashboard</a></li>
    <li class="breadcrumb-item"><a href="/admin/posts">Posts</a></li>
    <li class="breadcrumb-item active" aria-current="page">Create</li>
  </ol>
</nav>
<br>

<h2 class="font-weight-bold"><strong>CREATE POSTS</strong></h2>

{{#each errors}}
    <div class="alert alert-danger" role="alert">
        <i class="fa fa-warning" aria-hidden="true"></i> {{message}}
    </div>
{{/each}}

<form class="md-form" action="/admin/posts/create" method="post" enctype="multipart/form-data">

    <div class="row">
        <div class="col-md-7">
            <div class="md-form">
                <input type="text" id="title" name="title" class="form-control" required>
                <label for="title" >Title</label>
            </div>

            <select class="mdb-select" name="status" id="status">
                <option value="" disabled selected>Select Status</option>
                <option value="public">Public</option>
                <option value="private">Private</option>
                <option value="draft">Draft</option>
            </select>

            <div class="custom-control custom-checkbox">
                <input type="checkbox" class="custom-control-input" name="allowComments" id="allowComments">
                <label class="custom-control-label" for="allowComments">Allow Comments</label>
            </div>  

            <div class="md-form">
                <textarea type="text" id="body" name="body" class="md-textarea form-control" cols="15" rows="5" required></textarea>
                <label for="body">Body</label>
            </div>
        </div>
        <div class="col-md-1">

        </div>
        <div class="col-md-4">
            <div class="file-field float-left">
                <div class="mb-4">
                    <img src="/img/image-placeholder.jpg" class="img-fluid" alt="example placeholder">
                </div>
                <div class="d-flex justify-content-center">
                    <div class="btn btn-outline-info waves-effect float-left">
                        <span>Choose file <i class="fa fa-upload ml-3" aria-hidden="true"></i></span>
                        <input type="file" name="file" id="file">
                    </div>
                </div>
            </div>
        </div>
    </div>

    <button type="submit" class="btn btn-outline-success waves-effect"><i class="fa fa-check" aria-hidden="true"></i> Submit</button>
    <a href="/admin/posts" class="btn btn-outline-danger waves-effect"><i class="fa fa-arrow-left" aria-hidden="true"></i> Return</a>
</form>