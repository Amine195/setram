<style>
    body{
        background-color: #9e9e9e2e;
    }
    .breadcrumb{
        background-color: #607d8b2e
    }
</style>

<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/admin/dashboard">Dashboard</a></li>
    <li class="breadcrumb-item active" aria-current="page">Users</li>
  </ol>
</nav>

{{> admin/msgs}}

<!-- Material form login -->
<div class="card">

    <!--Card content-->
    <div class="card-body px-lg-5">

        <br>
        <h4 class="font-weight-bold"><strong><u>ALL USERS</u></strong></h4>
        <br>

        <div class="table-responsive">

            <table class="table">

                <thead class="grey lighten-2">
                    <tr>
                        <th scope="col">Matricule</th>
                        <th scope="col">Habilitation</th>
                        <th scope="col">Nom</th>
                        <th scope="col">Pr√©nom</th>
                        <th scope="col">Email</th>
                        <th scope="col">Status</th>
                        <th scope="col">Avatar</th>
                        <th></th>
                        <th scope="col"><span class="float-right"><a href="/admin/users/create" class="text-success"><i class="fa fa-plus" aria-hidden="true"></i> New</a></span></th>
                    </tr>
                </thead>

                <tbody>
                {{#each users}}
                    <tr>
                        <th scope="row">{{matricule}}</th>
                        <td>{{habilitation}}</td>
                        <td>{{firstName}}</td>
                        <td>{{lastName}}</td>
                        <td>{{email}}</td>
                        <td>{{status}}</td>
                        <td><img class="img-fluid" src="/uploads/{{file}}" alt="{{file}}" style="height:50px; width:50px;"></td>
                        <td><a href="/admin/users/view/{{id}}" class="btn btn-outline-success waves-effect btn-sm m-0 float-right">Consulter</a></td>
                    </tr>
                    {{/each}}
                </tbody>

            </table>
            
        </div>

    </div>

    <nav aria-label="Page navigation example">
        <ul class="pagination justify-content-end mr-5">
            {{#paginate current=current pages=pages}}
                
            {{/paginate}}
        </ul>
    </nav>

</div>
