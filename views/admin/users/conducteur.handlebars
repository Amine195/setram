    body{
        background-color: #9e9e9e2e;
    }
    .breadcrumb{
        background-color: #607d8b2e
    }
</style>

<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/admin/dashboard">Dashboard</a></li>
    <li class="breadcrumb-item"><a href="/admin/users">Users</a></li>
    <li class="breadcrumb-item active" aria-current="page">Conducteurs</li>
  </ol>
</nav>


<!-- Material form login -->
<div class="card">

    <!--Card content-->
    <div class="card-body px-lg-5">

        <br>
        <h5 class="font-weight-bold"><strong><u>LISTE DES CONDUCTEURS</u></strong></h5>
        <br>

        <div class="table-responsive">

            <table class="table">

                <thead class="grey lighten-2">
                    <tr>
                        <th scope="col">Matricule</th>
                        <th scope="col">Habilitation</th>
                        <th scope="col">Nom</th>
                        <th scope="col">Pr√©nom</th>
                        <th scope="col">Email</th>
                        <th scope="col">Status</th>
                        <th scope="col">Avatar</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>

                <tbody>
                {{#each users}}
                    <tr>
                        <th scope="row">{{matricule}}</th>
                        <td>{{habilitation}}</td>
                        <td>{{firstName}}</td>
                        <td>{{lastName}}</td>
                        <td>{{email}}</td>
                        <td>{{status}}</td>
                        <td><img class="img-fluid" src="/uploads/{{file}}" alt="{{file}}" style="height:50px; width:80px;"></td>
                        <td><td><a href="/admin/posts/view/{{id}}" class="btn btn-outline-success waves-effect btn-sm m-0 float-right">Consulter</a></td></td>
                    </tr>
                    {{/each}}
                </tbody>

            </table>
            
        </div>

    </div>

    <nav aria-label="Page navigation example">
        <ul class="pagination justify-content-end mr-5">
            <!--Previous-->
            <li class="page-item disabled">
                <a class="page-link" href="#" tabindex="-1">Previous</a>
            </li>

            <!--Numbers-->
            <li class="page-item"><a class="page-link" href="#">1</a></li>
