                    <label for="objet"> Objet</label>
                </div>

                <div class="md-form">
                    <i class="fa fa-pencil prefix grey-text"></i>
                    <textarea type="text" id="message" class="form-control md-textarea" rows="3"></textarea>
                    <label for="message">Message</label>
                </div>
            </div>

            <!--Footer-->
            <div class="modal-footer justify-content-center">
                <button type="button" class="btn btn-indigo waves-effect waves-light">Envoyer <i class="fa fa-paper-plane-o white-text ml-1"></i></button>
                <button type="button" class="btn btn-outline-indigo waves-effect waves-light" data-dismiss="modal">Annuler</button>
            </div>
        </div>
        <!--/.Content-->
    </div>
</div>

