<style>
    body{
        background-color: #9e9e9e2e;
    }
    .breadcrumb{
        background-color: #607d8b2e
    }
</style>

<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/admin/dashboard">Dashboard</a></li>
    <li class="breadcrumb-item active" aria-current="page">Categories</li>
  </ol>
</nav>
<br>

{{> admin/msgs}}

<div class="row">

    <div class="col-md-5">

        <div class="card">

            <!--Card content-->
            <div class="card-body px-lg-5">

                <h5 class="font-weight-bold"><strong><u>CREATE CATEGORIES</u></strong></h5>

                <form action="/admin/categories/create" method="post">

                    <div class="md-form">
                        <input type="text" name="name" id="name" class="form-control">
                        <label for="name">Enter Name of Categorie</label>
                    </div>
                    <button type="submit" class="btn btn-outline-success waves-effect ml-0">Create Category</button>
                </form>

            </div>

        </div>
        <br>

    </div>

    <div class="col-md-7">

        <div class="card">

            <!--Card content-->
            <div class="card-body px-lg-5">

                <h5 class="font-weight-bold"><strong><u>ALL CATEGORIES</u></strong></h5>

                <div class="table-responsive">
                    <table class="table">

                        <thead class="grey lighten-2">
                            <tr>
                                <th scope="col">Id</th>
                                <th scope="col">Name</th>
                                <th scope="col">Date</th>
                                <th scope="col"></th>
                                <th scope="col"></th>
                            </tr>
                        </thead>

                        <tbody>
                            {{#each categories}}
                            <tr>
                                <th scope="row">{{id}}</th>
                                <td>{{name}}</td>
                                <td>{{generateTime date 'Do-MM-YYYY'}}</td>
                                <td><a href="/admin/categories/edit/{{id}}" class="btn btn-outline-info waves-effect btn-sm m-0 float-right"><i class="fa fa-edit" aria-hidden="true"></i> Edit</a></td>
                                <td>
                                    <form action="/admin/categories/{{id}}?_method=DELETE" method="post">
                                        <button type="submit" class="btn btn-outline-danger waves-effect btn-sm m-0"><i class="fa fa-trash" aria-hidden="true"></i> Delete</button>
                                    </form>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>

                    </table>
                    
                </div>
            </div>

            <nav aria-label="Page navigation example">
                <ul class="pagination justify-content-end mr-5">
                    <!--Previous-->
                    <li class="page-item disabled">
                        <a class="page-link" href="#" tabindex="-1">Previous</a>
                    </li>

                    <!--Numbers-->
                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>

                    <!--Next-->
                    <li class="page-item">
                        <a class="page-link" href="#">Next</a>
                    </li>
                </ul>
            </nav>

        </div>

    </div>

</div>

<br><br><br><br>