{{#if success_message}}
    <div class="alert alert-dismissible fade show" role="alert" style="color:#8bc34a; background-color:#8bc34a1a; border-color:#8bc34a;">
        <h5 class="alert-heading mb-3"><i class="fa fa-check" aria-hidden="true"></i> Success</h5>
        <p class="pb-0 mb-0">{{success_message}}</p>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
{{/if}}